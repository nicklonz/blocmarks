<h1><%= @topic.name %></h1>

<% if true %>
  <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<% end %>
<% if true %>
  <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
<% end %>

<div class="row">
  <div class="col-md-8">
    <p class="lead"><%= @topic.name %></p>
    <% @bookmarks.each do |bookmark| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to bookmark.url, bookmark.url %>
            <br><%= link_to "Delete Bookmark", [@topic, bookmark], method: :delete, class: 'btn btn-primary', data: { confirm: 'Are you sure you want to delete this topic?' } %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
    <div class="col-md-4">
      <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
    </div>
  </div>
</div>
